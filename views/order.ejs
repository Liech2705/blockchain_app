        // Lưu ý: URL này phải đúng với route backend Nodejs của bạn
        const response = await fetch('/api/get-signature', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ orderId: orderId, userAddress: currentAccount })
        });

        const data = await response.json();
        if (!data.signature) throw new Error("Server không cấp chữ ký!");

        // B. Gọi Smart Contract và KIỂM TRA SỐ DƯ (Bản nâng cấp)
        statusDiv.innerText = "Đang kiểm tra số dư và ước tính phí...";
        const contract = new ethers.Contract(CONTRACT_ADDRESS, CONTRACT_ABI, signer);
        const priceInWei = ethers.toBigInt(data.price);

        try {
          // Ước tính gas cần cho giao dịch
          const estimatedGas = await contract.buyTicket.estimateGas(
            data.orderId,
            priceInWei,
            data.signature,
            { value: priceInWei }
          );

          // Lấy giá gas hiện tại
          const feeData = await provider.getFeeData();
          const gasPrice = feeData.gasPrice;

          // Tính tổng phí gas ước tính
          const estimatedGasFee = estimatedGas * gasPrice;
          const totalRequired = priceInWei + estimatedGasFee;
          const balance = await provider.getBalance(signer.getAddress());

          if (balance < totalRequired) {
            const format = (val) => ethers.formatEther(val).slice(0, 10);
            const msg = `Số dư không đủ.
                        - Số dư của bạn: ${format(balance)} CFX/ETH
                        - Tổng yêu cầu: ~${format(totalRequired)} CFX/ETH
                        (Bao gồm ${format(priceInWei)} cho vé và ~${format(estimatedGasFee)} cho phí giao dịch)
                        `;
            alert(msg);
            btnElement.text('Thanh toán ví Metamask').prop('disabled', false);
            statusDiv.innerText = "Lỗi: Số dư không đủ.";
            return;
          }

        } catch (gasError) {
          // Bắt cả lỗi nếu việc ước tính gas thất bại (thường do logic hợp đồng)
          console.error("Lỗi khi ước tính gas:", gasError);
          alert("Không thể ước tính phí giao dịch. Lỗi có thể từ logic smart contract. Chi tiết: " + (gasError.reason || gasError.message));
          btnElement.text('Thanh toán ví Metamask').prop('disabled', false);
          return;
        }


        // Nếu đủ tiền, tiến hành giao dịch
        statusDiv.innerText = "Đang mở MetaMask...";
        const tx = await contract.buyTicket(
          data.orderId,
          priceInWei,
          data.signature,
          { value: priceInWei }
        );
        statusDiv.innerText = "Đang chờ xác nhận trên Blockchain...";
        btnElement.text('Đang xử lý giao dịch...');

        // Chờ giao dịch hoàn tất
        await tx.wait();

        // C. Thành công
        statusDiv.innerText = "✅ Mua thành công!";
        alert("Giao dịch thành công! Hash: " + tx.hash);

        // Cập nhật lại trạng thái đơn hàng trên Database (Thành Success)
        $.post('/update-order-success', { orderId: orderId, txHash: tx.hash, fromAddress: currentAccount, toAddress: CONTRACT_ADDRESS, network: "conflux testnet", status: "Success", amount: Number(ethers.formatEther(priceInWei)) })
          .done((res) => {
            if (res.success) {
              console.log('Cập nhật đơn hàng thành công trên Database.');
            } else {
              console.warn('Lỗi cập nhật đơn hàng trên Database:', res.message);
            }
          }).fail((err) => {
            console.error('Lỗi kết nối Server khi cập nhật đơn hàng:', err);
          });

        // Chuyển hướng
        window.location.href = '/my-tickets';

      } catch (error) {
        console.error(error);
        alert("Giao dịch thất bại: " + (error.reason || error));
        btnElement.text('Thanh toán ví Metamask').prop('disabled', false);
      }
    }
  </script>
