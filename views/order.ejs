      const btn = $(this);
      btn.text('Đang khởi tạo đơn hàng...').prop('disabled', true);

      const totalVND = price * multiplier * qty;

      // Gọi API tạo đơn hàng (Pending) để lấy OrderID
      $.post('/create-pending-order', {
        eventId: '<%= event._id %>',
        userId: '<%= user._id %>',
        ticketType: type,
        quantity: qty,
        totalAmount: totalVND
      }).done(async (res) => {
        if (res.success) {
