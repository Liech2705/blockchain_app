  <style>
    /* Giữ nguyên toàn bộ CSS cũ của bạn */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Roboto', sans-serif;
      background: #121212;
      color: #fff;
      padding: 20px 0;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 16px;
    }

    .payment-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
      margin-bottom: 40px;
    }

    .user-section {
      background: #1a1a1a;
      border-radius: 24px;
      padding: 32px;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    }

    .section-title {
      font-size: 1.5rem;
      color: #00d4aa;
      margin-bottom: 24px;
      padding-bottom: 12px;
      border-bottom: 2px solid #2a2a2a;
    }

    .user-info-grid {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .info-item {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .info-label {
      font-size: 0.85rem;
      color: #888;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .info-value {
      font-size: 1.1rem;
      color: #fff;
      font-weight: 500;
    }

    .event-section {
      background: white;
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    }

    .event-poster {
      position: relative;
      height: 300px;
      overflow: hidden;
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .stage-light {
      position: absolute;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(0, 212, 170, 0.3) 0%, transparent 70%);
      border-radius: 50%;
      top: -100px;
      right: -100px;
    }

    .letter-A {
      position: absolute;
      font-size: 200px;
      font-weight: bold;
      color: rgba(0, 212, 170, 0.15);
      pointer-events: none;
    }

    .event-poster img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: relative;
      z-index: 1;
    }

    .event-details {
      padding: 32px;
      background: #1a1a1a;
      color: white;
    }

    .event-title {
      font-size: 1.8rem;
      line-height: 1.2;
      margin-bottom: 24px;
      color: #00d4aa;
    }

    .event-meta {
      display: flex;
      flex-direction: column;
      gap: 16px;
      margin-bottom: 24px;
    }

    .meta-item {
      display: flex;
      align-items: flex-start;
      gap: 12px;
    }

    .meta-item svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 2px;
      stroke: #00d4aa;
      fill: none;
    }

    .ticket-selection {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 16px;
      padding: 24px;
      margin: 24px 0;
      border: 1px solid rgba(0, 212, 170, 0.2);
    }

    .ticket-type {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 16px;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 12px;
      margin-bottom: 16px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .ticket-type:hover {
      background: rgba(0, 212, 170, 0.15);
    }

    .ticket-type.selected {
      background: rgba(0, 212, 170, 0.25);
      border: 2px solid #00d4aa;
    }

    .type-name {
      font-size: 1.2rem;
      font-weight: 600;
    }

    .type-price {
      color: #00d4aa;
      font-weight: bold;
      font-size: 1.3rem;
    }

    .quantity-selector {
      display: flex;
      align-items: center;
      gap: 20px;
      margin: 20px 0;
      font-size: 1.5rem;
    }

    .quantity-btn {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: #333;
      color: white;
      border: none;
      font-size: 1.8rem;
      cursor: pointer;
    }

    .quantity-btn:hover {
      background: #00d4aa;
    }

    .total-price {
      font-size: 2rem;
      font-weight: bold;
      color: #00d4aa;
      text-align: center;
      padding: 20px;
      background: rgba(0, 212, 170, 0.1);
      border-radius: 12px;
      margin: 24px 0;
    }

    .register-btn {
      width: 100%;
      background: linear-gradient(45deg, #00d4aa, #00b894);
      color: white;
      padding: 18px 0;
      font-size: 1.3rem;
      font-weight: 700;
      border: none;
      border-radius: 16px;
      cursor: pointer;
    }

    .register-btn:disabled {
      background: #444;
      cursor: not-allowed;
    }

    .wallet-status {
      text-align: center;
      margin: 16px 0;
      font-size: 1rem;
      color: #aaa;
    }

    @media (max-width: 968px) {
      .payment-layout {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

