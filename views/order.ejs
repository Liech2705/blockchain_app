          await buyTicket(res.orderId, btn);
        } else {
          alert('Lỗi tạo đơn hàng: ' + res.message);
          btn.text('Thanh toán ví Metamask').prop('disabled', false);
        }
      }).fail((err) => {
        alert('Lỗi kết nối Server');
        btn.text('Thanh toán ví Metamask').prop('disabled', false);
      });
    });

