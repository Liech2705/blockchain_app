<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Detail</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Bebas+Neue&display=swap"
    rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f5f5f5;
      color: #fff;
      line-height: 1.6;
      padding: 20px 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 16px;
    }

    /* === CARD SỰ KIỆN === */
    .event-card {
      display: flex;
      background: white;
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
      margin-bottom: 40px;
      flex-wrap: wrap;
    }

    .event-info {
      flex: 1;
      min-width: 300px;
      padding: 32px;
      background: #1a1a1a;
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .event-title {
      font-size: 1.8rem;
      line-height: 1.2;
      margin-bottom: 20px;
      color: #00d4aa;
    }

    .event-meta {
      display: flex;
      flex-direction: column;
      gap: 16px;
      font-size: 0.95rem;
    }

    .meta-item {
      align-items: flex-start;
      gap: 12px;
    }

    .meta-item svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .price {
      font-weight: 700;
      color: #00d4aa;
      margin: 24px 0;
    }

    .register-btn {
      color: white;
      padding: 14px 0;
      font-size: 1.1rem;
      font-weight: 600;
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: auto;
    }

    .register-btn:hover {
      background: #00b894;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 212, 170, 0.3);
    }

    /* === POSTER GIẢ LẬP 3D === */
    .event-poster {
      flex: 1;
      min-width: 300px;
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      position: relative;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 32px;
      color: white;
    }

    .sponsor-logos {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 12px;
      font-size: 0.8rem;
      opacity: 0.9;
      margin-bottom: 20px;
    }

    .logo-item {
      display: flex;
      align-items: center;
      gap: 6px;
      font-weight: 500;
    }

    .logo-item svg {
      width: 24px;
      height: 24px;
    }

    .stage-light {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, rgba(0, 212, 170, 0.6) 0%, transparent 70%);
      border-radius: 50%;
      animation: pulse 3s infinite;
      pointer-events: none;
    }

    @keyframes pulse {

      0%,
      100% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.6;
      }

      50% {
        transform: translate(-50%, -50%) scale(1.3);
        opacity: 0.3;
      }
    }

    .letter-A {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 140px;
      height: 140px;
      background: linear-gradient(135deg, #00d4aa, #00b894);
      clip-path: polygon(50% 0%, 0% 100%, 30% 100%, 50% 60%, 70% 100%, 100% 100%, 50% 0%);
      box-shadow: 0 0 40px rgba(0, 212, 170, 0.8), inset 0 0 20px rgba(255, 255, 255, 0.3);
      z-index: 1;
    }

    .event-main-title {
      font-family: 'Bebas Neue', cursive;
      font-size: 2.8rem;
      text-align: center;
      color: #00d4aa;
      text-shadow: 0 0 20px rgba(0, 212, 170, 0.8);
      z-index: 2;
      position: relative;
    }

    .event-date {
      font-size: 1.8rem;
      font-weight: 700;
      text-align: center;
      margin: 16px 0;
      color: #fff;
    }

    .event-location {
      text-align: center;
      font-size: 1rem;
      opacity: 0.9;
    }

    /* === PHẦN GIỚI THIỆU === */
    .intro-section {
      background: white;
      border-radius: 16px;
      padding: 32px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      margin-bottom: 40px;
      color: #333;
    }

    .section-title {
      font-size: 1.3rem;
      color: #555;
      margin-bottom: 16px;
      padding-bottom: 8px;
      border-bottom: 1px solid #eee;
    }

    .event-fullname {
      font-weight: 700;
      color: #00d4aa;
      margin: 16px 0 8px;
      font-size: 1.1rem;
    }

    .intro-text {
      color: #444;
      text-align: justify;
      margin-bottom: 12px;
    }

    /* === QUẢNG CÁO VISA === */
    .visa-banner {
      background: linear-gradient(135deg, #1e3a8a, #1e40af);
      color: white;
      padding: 24px;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
      box-shadow: 0 8px 24px rgba(30, 58, 138, 0.3);
    }

    .visa-text {
      font-size: 1.5rem;
      font-weight: 700;
    }

    .visa-highlight {
      color: #ffd43b;
    }

    .visa-logos {
      display: flex;
      align-items: center;
      gap: 16px;
      font-size: 0.8rem;
    }

    /* === POPUP === */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 20px;
    }

    .overlay.active {
      display: flex;
    }

    .popup {
      background: white;
      width: 100%;
      max-width: 420px;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
      animation: popupShow 0.4s ease;
      position: relative;
    }

    @keyframes popupShow {
      from {
        transform: scale(0.8);
        opacity: 0;
      }

      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .popup-header {
      background: linear-gradient(135deg, #00d4aa, #00b894);
      color: white;
      padding: 24px;
      text-align: center;
      position: relative;
    }

    .popup-header h2 {
      font-size: 1.6rem;
      font-weight: 700;
    }

    .close-btn {
      position: absolute;
      top: 16px;
      right: 16px;
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: none;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      font-size: 1.2rem;
      cursor: pointer;
      transition: 0.3s;
    }

    .close-btn:hover {
      background: rgba(255, 255, 255, 0.4);
    }

    .popup-body {
      padding: 32px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      color: #333;
    }

    .form-group input {
      width: 100%;
      padding: 14px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .form-group input:focus {
      outline: none;
      border-color: #00d4aa;
      box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.2);
    }

    .form-group input.error {
      border-color: #e74c3c;
    }

    .error-text {
      color: #e74c3c;
      font-size: 0.85rem;
      margin-top: 6px;
      display: none;
    }

    .error-text.show {
      display: block;
    }

    .submit-btn {
      width: 100%;
      background: #00d4aa;
      color: white;
      border: none;
      padding: 14px;
      font-size: 1.1rem;
      font-weight: 600;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .submit-btn:hover {
      background: #00b894;
      transform: translateY(-2px);
    }

    .submit-btn:disabled {
      background: #95a5a6;
      cursor: not-allowed;
      transform: none;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .event-card {
        flex-direction: column;
      }

      .event-info,
      .event-poster {
        min-width: 100%;
      }

      .event-main-title {
        font-size: 2.2rem;
      }

      .letter-A {
        width: 100px;
        height: 100px;
      }

      .visa-banner {
        text-align: center;
        flex-direction: column;
      }

      .popup {
        max-width: 340px;
      }
    }

    @media (max-width: 480px) {
      .event-title {
        font-size: 1.5rem;
      }

      .event-main-title {
        font-size: 1.8rem;
      }

      .letter-A {
        width: 80px;
        height: 80px;
      }

      .popup-header h2 {
        font-size: 1.4rem;
      }

      .popup-body {
        padding: 24px;
      }
    }
  </style>
  <base href="http://localhost:3000" />
  <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
  <script src="./process.js"></script>
</head>

<body>

  <div class="container">

    <!-- CARD SỰ KIỆN -->
    <div class="event-card">
      <!-- Thông tin bên trái -->
      <div class="event-info">
        <div>
          <h1 class="event-title">
            <%= event.title %>
          </h1>

          <div class="event-meta">
            <div class="meta-item">
              <svg fill="none" stroke="#00d4aa" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <div>
                <%= event.description %>
              </div>
            </div>

          </div>

          <div class="price">Giá: <strong>
              <%= (event.price || 0).toLocaleString('vi-VN') %> đ
            </strong></div>
        </div>
        <button class="register-btn" id="registerBtn">Đăng ký nhận vé</button>

        <script>
          document.getElementById('registerBtn').addEventListener('click', function () {
            const params = new URLSearchParams(window.location.search);
            const id = params.get('id');
            if (id) {
              window.location.href = `/dangky?eventId=${id}`;
            } else {
              window.location.href = '/dangky';
            }
          });
        </script>
      </div>

      <!-- Poster bên phải -->
      <div class="event-poster">
        <img src="<%= event.thumbnail %>" alt="<%= event.title %>">
      </div>
    </div>

    <!-- PHẦN GIỚI THIỆU -->
    <div class="intro-section">
      <h2 class="section-title">Giới thiệu</h2>
      <div class="event-fullname">
        <%= event.title %>
      </div>
      <p class="intro-text">
        <%= event.description || 'Thông tin thời gian và địa điểm chưa được cập nhật.' %>
      </p>
      <p class="intro-text">
      </p>
    </div>

    <!-- QUẢNG CÁO VISA -->
    <div class="visa-banner">
      <div>
        <div class="visa-text">Săn vé <span class="visa-highlight">đi đu idol</span> bằng <span
            class="visa-highlight">VISA</span></div>
      </div>
      <div class="visa-logos">
        <span>VNPAY</span>
        <span>VISA</span>
        <span>ticketbox</span>
      </div>
    </div>




  </div>



</body>

</html>